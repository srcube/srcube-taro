{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "composite": false,
    "target": "esnext",
    "moduleDetection": "force",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}
